.list-title {
  background-color: #fff;
  padding: 16rpx 0;
  text-align: center;
}

.list-item {
  display: flex;
  padding: 42rpx 20rpx;
  border-bottom: 1rpx solid #ececec;
}

.list-item-l {
  flex: 1;
}

.list-item-r {
  line-height: 76rpx;
}

.list-item-r > text {
  color: #f24;
  font-weight: 600;
  font-size: 32rpx;
}

.list-item-time {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #999;
}

/* 授权 */
.show-user-box {
  width: 100%;
  background-image: linear-gradient(to top, #fad5ad 0%, #f24 100%);
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.userinfo>.userinfo-btn {
  width: 300rpx;
  height: 80rpx;
  margin-top: 50rpx;
  border-radius: 80rpx;
  background-color: #fff;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  border-radius: 50%;
  background-color: #fff;
  border: 10rpx solid rgba(0, 0, 0, 0.1);
}

.userinfo-nickname {
  color: rgb(75, 75, 75);
  font-size: 36rpx;
  border: 1rpx solid rgb(219, 219, 219);
  padding: 8rpx 30rpx;
  border-radius: 40rpx;
  background-color: rgba(255, 255, 255, 0.664);
}