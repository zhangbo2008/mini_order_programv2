
.swiper {
  height: 360rpx;
}

.swiper image {
  width: 100%;
  height: 100%;
  border-bottom-left-radius: 30%;
  border-bottom-right-radius: 30%;
}

.menu-start {
  margin: 30rpx;
  border-radius: 80rpx;
  background-color: #f24;
  color: #fff;
}

.ad-box {
  margin-top: 20rpx;
  width: 100%;
  text-align: center;
}

.ad-image {
  width: 710rpx;
  height: 330rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
}

/* 底部图片展示 */

.bottom-box {
  margin: 10rpx 0;
  display: flex;
  width: 100%;
  padding: 0 20rpx;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
}

.bottom-pic {
  width: 49%;
  display: inline-block;
}

.bottom-image {
  width: 100%;
  height: 220rpx;
  border-radius: 10rpx;
}