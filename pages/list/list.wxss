/* pages/list/list.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 折扣信息区 */

.discount {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: #f2f8f7;
  font-size: 28rpx;
  text-align: center;
  color: rgb(131, 131, 131);
}

.discount-txt {
  color: #fff;
  padding: 5rpx 10rpx;
  background: rgb(255, 136, 0);
  margin-right: 15rpx;
}

.content {
  flex: 1;
  display: flex;
}

/* 左侧菜单 */

.category {
  width: 202rpx;
  height: 100%;
  background: #fcfcfc;
  font-size: 28rpx;
}

/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.category-item {
  height: 106rpx;
  line-height: 106rpx;
  text-align: center;
}

.category-unselect {
  color: #6c6c6c;
  background: #f9f9f9;
  border-bottom: 1rpx solid #e3e3e3;
}

.category-selected {
  color: #f24;
  border-left: 6rpx solid #f24;
  background-color: white;
}

/* 右侧菜单 */

.food-category {
  font-size: 24rpx;
  background-color: #fbf8ff;
  padding: 10rpx;
  color: #f24;
}

.food-item {
  display: flex;
  margin: 40rpx 20rpx;
}

.food-item-pic {
  margin-right: 20rpx;
  width: 94rpx;
  height: 94rpx;
}

.food-item-pic > image {
  width: 100%;
  height: 100%;
}

.food-item-info {
  flex: 1;
  font-size: 30rpx;
  margin-top: 4rpx;
}

.food-item-price {
  margin-top: 14rpx;
  color: #f05a86;
}

.food-item-opt {
  margin-top: 40rpx;
}


/* 满减区域 */

.promotion {
  height: 48rpx;
  line-height: 48rpx;
  background-color: #f3c6ba;
  color: #fff7ec;
  font-size: 26rpx;
  text-align: center;
}

/* 底部菜单操作 */

.operate {
  height: 110rpx;
  display: flex;
}

.operate-shopcart {
  width: 74%;
  padding: 10rpx;
  background-color: #464646;
}

.operate-submit {
  width: 26%;
  font-size: 30rpx;
  background: #eee;
  color: #aaa;
  text-align: center;
  line-height: 110rpx;
}

.operate-submit-activity {
  background: #f24;
  color: #fff;
}

.operate-shopcart {
  display: flex;
}

.cart-num {
  height: 38rpx;
  padding: 2rpx 14rpx;
  border-radius: 50%;
  background: red;
  color: white;
  font-size: 28rpx;
  text-align: center;
  top: 0px;
  right: -10rpx;
}

.operate-shopcart-ball {
  width: 36rpx;
  height: 36rpx;
  position: fixed;
  border-radius: 50%;
  left: 50%;
  top: 50%;
  background: #f24;
}

.operate-shopcart-empty {
  color: #a9a9a9;
  line-height: 88rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.operate-shopcart-price {
  display: flex;
}

.operate-shopcart-price > view {
  font-size: 40rpx;
  line-height: 88rpx;
  margin-left: 25rpx;
  color: #fff;
}

.operate-shopcart-price > text {
  font-size: 24rpx;
  line-height: 92rpx;
  margin-left: 15rpx;
  color: #aaa;
  text-decoration: line-through;
}

.shopcart {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 149rpx;
  right: 0;
  font-size: 28rpx;
}

.shopcart-mask {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
}

.shopcart-wrap {
  position: absolute;
  width: 100%;
  max-height: 90%;
  bottom: 0;
  background: #fff;
  overflow: scroll;
}

.shopcart-head {
  position: fixed;
  width: 100%;
  background: #f0f0f0;
  color: #878787;
  line-height: 100rpx;
  font-size: 26rpx;
  overflow: hidden;
}

.shopcart-head-title {
  float: left;
  margin-left: 40rpx;
}

.shopcart-head-title:before {
  background: #f24;
  width: 8rpx;
  height: 32rpx;
  content: "";
  display: inline-block;
  margin-right: 10rpx;
  position: relative;
  top: 6rpx;
}

.shopcart-head-clean {
  float: right;
  margin-right: 20rpx;
}

.shopcart-head-clean > i:before {
  content: "\e61b";
  position: relative;
  top: 2rpx;
}

.shopcart-list {
  margin-top: 101rpx;
}

.shopcart-item {
  display: flex;
  padding: 30rpx 20rpx;
  line-height: 58rpx;
}

.shopcart-item > view {
  margin-left: 20rpx;
}

.shopcart-item:not(:last-child) {
  border-bottom: 1rpx solid #e3e3e3;
}

.shopcart-item-name {
  flex: 1;
}

.shopcart-item-price {
  color: #f24;
}

.shopcart-item-number {
  display: flex;
}

.shopcart-item-number > view {
  margin: 0 10rpx;
}

.shopcart-icon-dec:before {
  content: "\e61a";
  font-size: 44rpx;
  color: #888;
}

.shopcart-icon-add:before {
  content: "\e728";
  font-size: 44rpx;
  color: #f24;
}

.iconfont {
  width: 60rpx;
  height: 60rpx;
}

.cart-icon {
  margin-top: 15rpx;
}

.add-icon {
  width: 56rpx;
  height: 56rpx;
}

.dec-icon {
  width:38rpx;
  height: 38rpx;
  padding: 10rpx;
}

.del-icon {
  margin-left: 14rpx;
  width:48rpx;
  height: 48rpx;
  padding: 6rpx;
}